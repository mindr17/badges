{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "types": ["node"],
  "paths": {
    "@src/*": ["src/*"]
  },
  "include": ["./*"]
}
